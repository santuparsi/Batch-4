@model HandsOnModelBinding.Models.User  
@{
    ViewData["Title"] = "Register";
}
<style>
    span
    {
        color:maroon;
    }
</style>
<h1>Register</h1>
<div class="container">
    <form asp-action="Register" asp-controller="Account" method="post">
		<table>
			<tr>
				<td>Name</td>
				<td>
					<input type="text" asp-for="Name" />
					<span asp-validation-for="Name"></span>
				</td>
			</tr>
			<tr>
				<td>Email</td>
				<td>
					<input type="email" asp-for="Email" />
					<span asp-validation-for="Email"></span>
				</td>
			</tr>
			<tr>
				<td>Mobile</td>
				<td>
					<input type="number" asp-for="Mobile" />
					<span asp-validation-for="Mobile"></span>
				</td>
			</tr>
			<tr>
				<td>Username</td>
				<td>
					<input type="text" asp-for="Uname" />
					<span asp-validation-for="Uname"></span>
				</td>
			</tr>
			<tr>
				<td>Password</td>
				<td>
					<input type="password" asp-for="Pwd" />
					<span asp-validation-for="Pwd"></span>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<input type="submit" value="Register" />
				</td>
			</tr>
		</table>
    </form>
</div>

