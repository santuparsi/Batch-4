
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-action="Login" asp-controller="Account" method="post">
    <table>
        <tr>
            <td>Username</td>
            <td>
               @Html.TextBox("uname")  
            </td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Html.Password("pwd")</td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Submit" />
            </td>
        </tr>
        @if(ViewBag.errMsg!=null)
		{
            <tr>
                <td colspan="2">
					<span class="text-danger">@ViewBag.errMsg</span>
                </td>
            </tr>
		}
        <tr>
            <td colspan="2">
                <a asp-action="Register" asp-controller="Account">SingUp</a>
            </td>
        </tr>
    </table>
</form>
