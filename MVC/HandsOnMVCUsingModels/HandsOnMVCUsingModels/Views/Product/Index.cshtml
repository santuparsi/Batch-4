@model IEnumerable<HandsOnMVCUsingModels.Models.Product> 
@{
    ViewData["Title"] = "Index";
}

<h1>Product Details</h1>
<a href="/Product/Create">New Product</a>
<div class="container">
    <table class="table table-bordered">
        <tr>
           <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
        @foreach(var item in Model)
		{
	<tr>
		<td>@item.Pid</td>
		<td>@item.Pname</td>
		<td>@item.Price</td>
		<td>@item.Stock</td>
        <td><a href="/Product/Details/@item.Pid">Viewdetails</a></td>
	</tr>
		}
    </table>
</div>

